{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    "jsx": "react-jsx",
    "strict": true,

    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,

    "rootDir": "src",
    "outDir": "dist",

    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src", "src/index.ts"],
  "exclude": ["example", "src/main.tsx"]
}
